@model IEnumerable<InventaryWeb.Models.ExitDetails>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="row">
        <form class="form-inline">
            <div style="margin-bottom: 10px; margin-top:15px; border-bottom:10px">
                <div class="col-lg-14">
                    <a style="font-size:14px" class="btn btn-success btn-on fa fa-plus" href="@Url.Action("Create","ExitDetails")">
                        Crear nuevo detalle de nota de salida
                    </a>
                </div>
            </div>

        </form>
    </div>
</nav>
<card class="card">
    <card class="card-header">
        <h2>Detalles de Notas de Salida</h2>
    </card>
    <card class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ExitNote.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subtotal)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExitNote.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subtotal)
                        </td>
                        <td>
                            <a class="btn btn-xs btn-success" href="@Url.Action("Details","ExitDetails",new { id=item.Id })">
                                Detalles
                            </a>
                            <a class="btn btn-xs btn-info" href="@Url.Action("Edit","ExitDetails",new { id=item.Id })">
                                Editar
                            </a>
                            <a class="btn btn-xs btn-danger" href="@Url.Action("Delete","ExitDetails",new { id=item.Id })">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </card>
</card>
<a class="btn  btn-danger" href="@Url.Action("Index","ExitNotes")">Cancelar</a>
@section Scripts {
    <script>
        $(".datatable").DataTable({});
    </script>
}
