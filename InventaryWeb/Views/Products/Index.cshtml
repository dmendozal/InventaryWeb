@model IEnumerable<InventaryWeb.Models.Product>

@{
    ViewBag.Title = "Index";
}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="row">
            <form class="form-inline">
                <div style="margin-bottom: 10px; margin-top:15px; border-bottom:10px">
                    <div class="col-lg-14">
                        <a style="font-size:14px" id="create-product" class="btn btn-success btn-on fa fa-plus" href="@Url.Action("Create","Products")">
                            Crear Nuevo Producto
                        </a>
                    </div>
                </div>
                <div style="margin-bottom: 10px; margin-top:15px; border-bottom:10px">
                    <div class="col-lg-14">
                        <a style="font-size:14px"id="action-category" class="btn btn-info fa fa-shopping-bag" href="@Url.Action("Index","Categories")">
                            Categorias
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </nav>

        <card class="card">
            <card class="card-header">
                <h2>Productos</h2>
            </card>
            <card class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PurchasePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SalePrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MainImage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ExpirationTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Unit.Abbreviation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Provider.Name)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PurchasePrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SalePrice)
                                    </td>
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.MainImage)" style="height:10%; " />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpirationTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Unit.Abbreviation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Provider.Name)
                                    </td>
                                    <td>
                                        <a class="btn btn-xs btn-success" href="@Url.Action("Details","Products",new { id=item.Id })">
                                            Detalles
                                        </a>
                                        <a class="btn btn-xs btn-info" href="@Url.Action("Edit","Products",new { id=item.Id })">
                                            Editar
                                        </a>
                                        <a class="btn btn-xs btn-danger" href="@Url.Action("Delete","Products",new { id=item.Id })">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </card>
        </card>
        <a class="btn  btn-danger" href="@Url.Action("Index","Home")" >Cancelar</a>
        @section Scripts {
            <script>
                $(".datatable").DataTable({});
            </script>
        }
