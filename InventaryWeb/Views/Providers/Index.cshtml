@model IEnumerable<InventaryWeb.Models.Provider>

@{
    ViewBag.Title = "Index";
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="row">
        <form class="form-inline">
            <div style="margin-bottom: 10px; margin-top:15px; border-bottom:10px">
                <div class="col-lg-14">
                    <a style="font-size:14px" class="btn btn-success btn-on fa fa-plus" href="@Url.Action("Create","Providers")">
                        Crear Proveedor
                    </a>
                </div>
            </div>

        </form>
    </div>
</nav>
<card class="card">
    <card class="card-header">
        <h2>Proveedores</h2>
    </card>
    <card class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ci)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telephone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ci)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telephone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            <a class="btn btn-xs btn-success" href="@Url.Action("Details","Providers",new { id=item.Id })">
                                Detalles
                            </a>
                            <a class="btn btn-xs btn-info" href="@Url.Action("Edit","Providers",new { id=item.Id })">
                                Editar
                            </a>
                            <a class="btn btn-xs btn-danger" href="@Url.Action("Delete","Providers",new { id=item.Id })">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </card>
</card>
<a class="btn  btn-danger" href="@Url.Action("Index","Home")">Cancelar</a>
@section Scripts {
    <script>
        $(".datatable").DataTable({});
    </script>
}
