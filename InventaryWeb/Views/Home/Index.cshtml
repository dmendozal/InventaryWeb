@Html.Partial("_Navigation")
@model IEnumerable<InventaryWeb.Models.Product>
<style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<!-- Masthead -->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">SuperMarket WareHouse</h1>
                <hr class="divider my-4">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">Tu mejor opción para controlar tu inventario de una manera dinámica e intuitiva</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Saber más!</a>
            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section class="page-section bg-primary" id="about">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">¡Tenemos lo que necesitas!</h2>
                <hr class="divider light my-4">
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">¡Empezar!</a>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">Administracion</h2>
        <hr class="divider my-4">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-users text-primary mb-4"></i>
                    <h3 class="h4 mb-2">@Html.ActionLink("Usuarios", "Index", "Users", null, htmlAttributes: new { @id = "action-users" })</h3>
                    <p class="text-muted mb-0">Nuestro equipo de trabajo!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-users-cog text-primary mb-4"></i>
                    <h3 class="h4 mb-2">@Html.ActionLink("Proveedores", "Index", "Providers", null, htmlAttributes: new { @id = "action-providers" })</h3>
                    <p class="text-muted mb-0">Las personas con las que trabajamos externamente.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-sticky-note text-primary mb-4"></i>
                    <h3 class="h4 mb-2">@Html.ActionLink("Notas de Entrada", "Index", "EntryNotes", null, htmlAttributes: new { @id = "action-entryNotes" })</h3>
                    <p class="text-muted mb-0">Registro de las productos que se compran y se almacenan</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-paperclip text-primary mb-4"></i>
                    <h3 class="h4 mb-2">@Html.ActionLink("Notas de Salida", "Index", "ExitNotes", null, htmlAttributes: new { @id = "action-exitNotes" })</h3>
                    <p class="text-muted mb-0">Registro de los productos que son extraídos del almacén </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-shopping-cart text-primary mb-4"></i>
                    <h3 class="h4 mb-2">@Html.ActionLink("Productos", "Index", "Products", null, htmlAttributes: new { @id = "action-products" })</h3>
                    <p class="text-muted mb-0">Nuestros productos </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-shopping-cart text-primary mb-4"></i>
                    <h3 class="h4 mb-2">@Html.ActionLink("Bandeja de Entrada", "Index", "Contacts", null, htmlAttributes: new { @id = "action-contacts" })</h3>
                    <p class="text-muted mb-0"> Recepción de mensajes </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Portfolio Section -->
<section id="portfolio">
    <div class="container-fluid p-0">
        <div class="row no-gutters">
            @{int i = 0;}
            @foreach (var item in Model)
            {
                if (i < 6)
                {
                    <div class="col-lg-4 col-sm-6">
                        <a class="portfolio-box" href="@Html.DisplayFor(modelItem => item.MainImage)">
                            <img class="img-fluid" style="height:400px; width:400px" src="@Html.DisplayFor(modelItem => item.MainImage)" alt="">
                            <div class="portfolio-box-caption">
                                <div class="project-category text-white-50">
                                    Categoria : @Html.DisplayFor(modelItem => item.Category.Name)
                                </div>
                                <div class="project-name">
                                    Nombre: @Html.DisplayFor(modelItem => item.Name) <br />
                                    Precio: @Html.DisplayFor(modelItem => item.SalePrice)<br />
                                    Empresa: @Html.DisplayFor(modelItem => item.Provider.Name)<br />
                                    Fecha de Vencimiento: @Html.DisplayFor(modelItem => item.ExpirationTime.Year)/@Html.DisplayFor(modelItem => item.ExpirationTime.Month)/@Html.DisplayFor(modelItem => item.ExpirationTime.Day) <br />
                                    <img class="img-fluid" style="height:150px; width:150px" src="@Html.DisplayFor(modelItem => item.CodeQR)" />
                                </div>
                            </div>
                        </a>
                    </div>
                    i++;
                }
            }
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="page-section bg-dark text-white">
    <div class="container text-center">
        <h2 class="mb-4">Productos Nuevos</h2>
        @*<a class="btn btn-light btn-xl" href="https://startbootstrap.com/themes/creative/">Download Now!</a>*@
    </div>
</section>

<!-- Contact Section -->
<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mt-0">¡Mantengámonos en contacto!</h2>
                <hr class="divider my-4">
                <p class="text-muted mb-5">¡Llámenos o envíenos un correo electrónico y nos pondremos en contacto con usted lo antes posible!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                <div>+591 75006936</div>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fas fa-search-location fa-3x mb-3 text-muted" data-toggle="modal" data-target="#myModal1"></i>
                <!-- Make sure to change the email address in anchor text AND the link below! -->
                <a class="d-block" href="https://www.google.com.bo/maps/place/INFO-ARCH+S.R.L./" + @("@-17.7793715,-63.1723892,15z/data=!4m5!3m4!1s0x0:0x95ab382f7c02dd04!8m2!3d-17.7795888!4d-63.1650128") ">Location</a>
                <a class="small text-muted">272 Santa Cruz Avenue, Santa Cruz de la Sierra, Bolivia</a>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fas fa-envelope fa-3x mb-3 text-muted" data-toggle="modal" data-target="#myModal"></i>
                <!-- Make sure to change the email address in anchor text AND the link below! -->
                <a class="d-block" href="mailto:Danieel74896@gmail.com">Danieel74896@gmail.com</a>
            </div>
        </div>
    </div>

</section>

<div class="container">
    <!-- Modal -->
    <div class="modal modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Create", "Contacts"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Nombre:</label>
                            <input type="text" name="name" class="form-control" id="name" required>
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Email:</label>
                            <input type="email" name="email" class="form-control" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Mensaje:</label>
                            <textarea class="form-control" name="message" id="message" required></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                            <input class="btn btn-success" type="submit" id="send-message"  value="Enviar">
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</div>
<div class="container">
    <!-- Modal -->
    <div class="modal modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Location</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="map" style="height:400px; width:460px"></div>
                </div>

            </div>

        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyApploXa60vehGdgZkboEB6668dRNQt8UM&callback=initMap"
            async defer></script>
    <script>
        $(document).ready(function () {
            $('.save').on('click', function () {
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    url: "/Home/BestContact",
                    data: { nombre: $('#name').val(), email: $('#email').val(), message: $('#message').val() },
                    success: function (result) {
                        console.log(result);
                    },
                    error: function (result) {
                        console.log(result);
                        alert('error');
                    }
                });
            });
        });
    </script>
    <script>
        var map;
        function initMap() {
            var myLatLng = {lat: -17.779538, lng: -63.165002};
            map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 16
            });
            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Estamos Aqui'
            });
        }
    </script>
}

